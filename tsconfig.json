{
	// Note: `src` directory has its own `tsconfig.json`
	// `webpack.config.ts` needs `module: commonjs` to work,
	// but `src` files need `module: esnext`.
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",
		"esModuleInterop": true,
		"jsx": "react",
		"strict": true,
		"allowJs": false
	}
}
