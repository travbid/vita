
border-radius()
	border-radius: arguments

body
	display: flex
	margin: 0
	font: 12px Helvetica, Arial, sans-serif
	background-color #333;

a.button
	border-radius(5px)

#gl_canvas
	position: fixed

#content
	margin: 0 auto
	padding: 0 1em
	z-index: 5
	color: #ddd

.screen
	background-color: rgba(0,0,0,0.5)

.centered
	height 100vh
	display: flex;
	justify-content: center;
	align-items: center;

.title
	animation 2s ease 1s forwards fadein
	opacity 0
	text-align center
	font-size 10vmin

.prompt
	position absolute
	animation 1s ease 4s forwards fadein
	opacity 0
	bottom 0
	font-size 1.5em;

@keyframes fadein
	from { opacity: 0; }
	to   { opacity: 1; }

.spacer
	height 50vh
